# ============================================
# üé® Image Optimizer Pro - Enhanced Apache Configuration
# ============================================

# Enable mod_rewrite
RewriteEngine On

# ============================================
# üîí Enhanced Security Headers
# ============================================

# Prevent access to sensitive files
<FilesMatch "(^\.htaccess|composer\.json|composer\.lock|\.git|\.env|\.log)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Hide PHP version and server info
Header unset X-Powered-By
Header unset Server

# Enhanced security headers
Header always set X-Content-Type-Options nosniff
Header always set X-Frame-Options DENY
Header always set X-XSS-Protection "1; mode=block"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), speaker=()"

# Strict Content Security Policy
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self'; media-src 'self'; object-src 'none'; child-src 'none'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'"

# HSTS (uncomment if using HTTPS)
# Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# ============================================
# üìÅ Enhanced Directory Protection
# ============================================

# Protect vendor directory
<Directory "vendor">
    Order allow,deny
    Deny from all
</Directory>

# Protect src directory from direct access
<Directory "src">
    Order allow,deny
    Deny from all
</Directory>

# Protect logs directory
<Directory "logs">
    Order allow,deny
    Deny from all
</Directory>

# Protect storage directories (but allow downloads via script)
<Directory "uploads">
    Options -Indexes -ExecCGI
    <FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</Directory>

<Directory "optimized">
    Options -Indexes -ExecCGI
    <FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</Directory>

<Directory "temp">
    Options -Indexes -ExecCGI
    <FilesMatch "\.(php|phtml|php3|php4|php5|pl|py|jsp|asp|sh|cgi)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
</Directory>

# ============================================
# üì§ Enhanced Upload Configuration
# ============================================

# Increase upload limits
php_value upload_max_filesize 50M
php_value post_max_size 200M
php_value max_execution_time 300
php_value max_input_time 300
php_value memory_limit 512M
php_value max_file_uploads 50
php_value max_input_vars 3000

# Enable file uploads
php_flag file_uploads On

# ============================================
# üóúÔ∏è Advanced Compression & Performance
# ============================================

# Enable GZIP compression with enhanced settings
<IfModule mod_deflate.c>
    # Compress HTML, CSS, JavaScript, Text, XML and fonts
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/vnd.ms-fontobject
    AddOutputFilterByType DEFLATE application/x-font
    AddOutputFilterByType DEFLATE application/x-font-opentype
    AddOutputFilterByType DEFLATE application/x-font-otf
    AddOutputFilterByType DEFLATE application/x-font-truetype
    AddOutputFilterByType DEFLATE application/x-font-ttf
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE font/opentype
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/ttf
    AddOutputFilterByType DEFLATE image/svg+xml
    AddOutputFilterByType DEFLATE image/x-icon
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml

    # Remove browser bugs (only needed for really old browsers)
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
    
    # Don't compress images (they're already optimized)
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|webp|avif)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# Enable Brotli compression if available
<IfModule mod_brotli.c>
    BrotliCompressionQuality 6
    BrotliFilterByType text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml+rss application/atom+xml image/svg+xml
</IfModule>

# ============================================
# üöÄ Enhanced Browser Caching
# ============================================

<IfModule mod_expires.c>
    ExpiresActive on

    # Images - Long cache since they're optimized and unlikely to change
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"

    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"

    # HTML and API responses
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType application/json "access plus 10 minutes"
    
    # Downloads
    ExpiresByType application/zip "access plus 1 hour"
</IfModule>

# Enhanced Cache-Control headers
<IfModule mod_headers.c>
    # CSS and JS files
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000, stale-while-revalidate=86400"
        Header set X-Content-Type "optimized"
    </FilesMatch>
    
    # Optimized image files - immutable cache
    <FilesMatch "optimized\.(jpg|jpeg|png|gif|webp|avif)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set X-Image-Status "optimized"
    </FilesMatch>
    
    # Regular image files
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|avif|svg)$">
        Header set Cache-Control "public, max-age=2592000"
        Header append Vary Accept-Encoding
    </FilesMatch>
    
    # Font files
    <FilesMatch "\.(woff|woff2|ttf|eot|otf)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
    
    # HTML files
    <FilesMatch "\.html$">
        Header set Cache-Control "public, max-age=3600, must-revalidate"
    </FilesMatch>
    
    # API endpoints - short cache
    <FilesMatch "\.(php)$">
        Header set Cache-Control "no-cache, must-revalidate"
        Header set X-API-Version "1.0"
    </FilesMatch>
</IfModule>

# ============================================
# üåê Enhanced CORS Headers
# ============================================

# Allow cross-origin requests for API endpoints
<FilesMatch "^(process|download)\.php$">
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, HEAD"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin"
    Header always set Access-Control-Expose-Headers "Content-Length, Content-Range, X-Image-Optimized"
    Header always set Access-Control-Max-Age "86400"
    Header always set Access-Control-Allow-Credentials "false"
</FilesMatch>

# Handle preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# ============================================
# üöÄ Advanced Image Optimization
# ============================================

# Serve WebP images when supported and available
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_ACCEPT} image/webp
    RewriteCond %{REQUEST_FILENAME} \.(jpe?g|png)$
    RewriteCond %{REQUEST_FILENAME}\.webp -f
    RewriteRule (.+)\.(jpe?g|png)$ $1.$2.webp [T=image/webp,E=webp:1,L]
</IfModule>

# Serve AVIF images when supported and available
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_ACCEPT} image/avif
    RewriteCond %{REQUEST_FILENAME} \.(jpe?g|png|webp)$
    RewriteCond %{REQUEST_FILENAME}\.avif -f
    RewriteRule (.+)\.(jpe?g|png|webp)$ $1.$2.avif [T=image/avif,E=avif:1,L]
</IfModule>

# Set correct MIME types for modern image formats
<IfModule mod_mime.c>
    AddType image/webp .webp
    AddType image/avif .avif
    AddType image/jxl .jxl
</IfModule>

# Enhanced Vary header for image format negotiation
<IfModule mod_headers.c>
    <FilesMatch "\.(jpe?g|png|webp|avif)$">
        Header append Vary Accept
        Header append Vary Accept-Encoding
    </FilesMatch>
    
    # Add image optimization headers
    <FilesMatch "optimized.*\.(jpe?g|png|webp|avif)$">
        Header set X-Image-Progressive "true"
        Header set X-Image-Optimized "true"
    </FilesMatch>
    
    # Progressive JPEG indicator
    <FilesMatch "\.jpe?g$">
        Header set X-Image-Type "Progressive JPEG"
    </FilesMatch>
</IfModule>

# ============================================
# üì± Clean URLs & Enhanced Routing
# ============================================

# Remove trailing slashes
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} \s(.+?)//+(.*)
RewriteRule ^ %1/%2 [R=301,L]

