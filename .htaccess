# ============================================
# üîß Enhanced PHP Configuration
# ============================================

# Disable PHP execution in upload directories
<DirectoryMatch "(uploads|optimized|temp)">
    php_flag engine off
    AddHandler cgi-script .php .phtml .php3 .pl .py .jsp .asp .sh .cgi
    Options -ExecCGI
    RemoveHandler .php .phtml .php3 .php4 .php5
</DirectoryMatch>

# PHP error reporting (disable in production)
php_flag display_errors Off
php_flag log_errors On
php_value error_log logs/php_errors.log

# Session security
php_value session.cookie_httponly 1
php_value session.cookie_secure 1
php_value session.use_strict_mode 1
php_value session.cookie_samesite "Strict"

# Enhanced security settings
php_flag allow_url_fopen Off
php_flag allow_url_include Off
php_flag expose_php Off

# ============================================
# üìù Enhanced Logging
# ============================================

# Custom log format with more details
LogFormat "%h %l %u %t \"%r\" %>s %O \"%{Referer}i\" \"%{User-Agent}i\" %D %{X-Forwarded-For}i" combined_with_time

# Enable detailed logging for debugging
CustomLog logs/access.log combined_with_time
ErrorLog logs/error.log
LogLevel warn

# Log slow requests
LogLevel info rewrite:trace3

# ============================================
# üéØ Performance Optimizations
# ============================================

# Remove ETags for better caching
Header unset ETag
FileETag None

# Enable Keep-Alive for better performance
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# Preload critical resources
<IfModule mod_headers.c>
    <LocationMatch "^/$">
        Header add Link "</assets/style.css>; rel=preload; as=style"
        Header add Link "</assets/app.js>; rel=preload; as=script"
        Header add Link "</assets/fonts/main.woff2>; rel=preload; as=font; crossorigin"
    </LocationMatch>
</IfModule>

# Prevent image hotlinking (uncomment and modify domain)
# RewriteCond %{HTTP_REFERER} !^$
# RewriteCond %{HTTP_REFERER} !^https?://(www\.)?yourdomain\.com [NC]
# RewriteCond %{REQUEST_URI} \.(jpg|jpeg|png|gif|webp|avif)$ [NC]
# RewriteRule \.(jpg|jpeg|png|gif|webp|avif)$ /assets/hotlink-protection.jpg [R=302,L]

# Force file download for certain file types
<FilesMatch "\.(zip|tar|tar\.gz|7z)$">
    Header set Content-Disposition "attachment"
    Header set X-Download-Options "noopen"
</FilesMatch>

# ============================================
# üìä Performance Monitoring Headers
# ============================================

<IfModule mod_headers.c>
    # Add timing headers for performance monitoring
    Header set X-Response-Time "%D"
    Header set X-Server-Load "%l"
    
    # Cache status headers
    Header set X-Cache-Status "MISS"
    Header set X-Served-By "Image-Optimizer-Pro"
    
    # Security headers for monitoring
    Header set X-Frame-Options "DENY"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Content-Type-Options "nosniff"
</IfModule>

# ============================================
# üåü Final Optimizations
# ============================================

# Optimize .htaccess file parsing
<IfModule mod_rewrite.c>
    # Don't check for file existence for static files to improve performance
    RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|webp|avif|ico|woff|woff2)$
    RewriteRule ^ - [L]
</IfModule>

# Enable HTTP/2 Server Push for critical resources (if supported)
<IfModule mod_http2.c>
    H2PushPriority *                      after
    H2PushPriority text/css               before
    H2PushPriority image/jpeg             after   32
    H2PushPriority image/png              after   32
    H2PushPriority image/webp             after   16
    H2PushPriority application/javascript interleaved
</IfModule>